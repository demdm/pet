{% extends '@Common/outer_main.html.twig' %}

{% trans_default_domain 'IdentityBundle' %}

{% block title %}{{ 'LOGIN.TITLE.LOGIN'|trans }}{% endblock %}

{% block bodyClass %}mai-splash-screen{% endblock %}

{% block body %}
    <div class="mai-wrapper mai-login">
        <div class="main-content container">
            <div class="splash-container row">
                <div class="col-md-6 user-message">
                    <span class="splash-message text-right">Hello!<br> is good to<br> see you again</span>
                    <span class="alternative-message text-right">{{ 'LOGIN.HINT.NOT_HAVE_ACCOUNT'|trans }} <a href="{{ path('app_identity_registration_index') }}">{{ 'REGISTRATION.TITLE.REGISTRATION'|trans }}</a></span>
                </div>
                <div class="col-md-6 form-message">
                    <img class="logo-img mb-4"
                         src="assets/img/logo-2x.png"
                         alt="logo"
                         width="169"
                         height="28">
                    <span class="splash-description text-center mt-5 mb-5">{{ 'LOGIN.TITLE.LOGIN'|trans }}</span>

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_identity_auth_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <form method="post">
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend"><i class="icon s7-user"></i></div>
                                <input class="form-control"
                                       id="id"
                                       name="id"
                                       type="text"
                                       placeholder="{{ 'LOGIN.LABEL.EMAIL'|trans }}"
                                       autofocus
                                       value="{{ last_username }}"
                                >
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend"><i class="icon s7-lock"></i></div>
                                <input class="form-control"
                                       id="password"
                                       type="password"
                                       name="password"
                                       placeholder="{{ 'LOGIN.LABEL.PASSWORD'|trans }}"
                                >
                            </div>
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <div class="form-group login-submit">
                            <button class="btn btn-lg btn-primary btn-block" data-dismiss="modal" type="submit">
                                {{ 'LOGIN.BUTTON.SIGN_IN'|trans }}
                            </button>
                        </div>
                        <div class="form-group row login-tools">
                            <div class="col-sm-6 login-remember">
                                {#        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
                                {#        See https://symfony.com/doc/current/security/remember_me.html#}

                                {#        <div class="checkbox mb-3">#}
                                {#            <label>#}
                                {#                <input type="checkbox" name="_remember_me"> Remember me#}
                                {#            </label>#}
                                {#        </div>#}

{#                                <label class="custom-control custom-checkbox mt-2">#}
{#                                    <input class="custom-control-input" type="checkbox"><span class="custom-control-label">Remember me</span>#}
{#                                </label>#}
                            </div>
                            <div class="col-sm-6 pt-2 text-sm-right login-forgot-password">
                                <a href="#">Forgot Password?</a>
                            </div>
                        </div>
                    </form>
                    <div class="out-links">
                        <a href="#">Â© {{ "now"|date("Y") }} HRM Company</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
