{% extends '@HrmCommon/inner_main.html.twig' %}

{#{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}#}

{% trans_default_domain 'HrmCompanyBundle' %}

{% if isCompanyCreated == true %}
    {% set title = 'SETTINGS.MY.TITLE.EDIT_COMPANY'|trans %}
{% else %}
    {% set title = 'SETTINGS.MY.TITLE.CREATE_COMPANY'|trans %}
{% endif %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-6">
            <div class="card card-default">
                <div class="card-header card-header-divider">
                    {{ title }}
                </div>
                <div class="card-body">

                    {#
                    {% include '@HrmCommon/inner/alert/alert.html.twig' with {
                        'type': 'info',
                        'message': "<strong>Привет</strong>"
                    } %}
                    #}

                    <form>
                        <div class="form-group mt-1">
                            <label for="name">{{ 'SETTINGS.MY.LABEL.NAME'|trans }}</label>
                            <input class="form-control" id="name" type="email" value="{{ companyRequest.name }}">
                            <ul class="parsley-errors-list filled" id="parsley-id-5"><li class="parsley-required">This value is required.</li></ul>
                        </div>

                        <div class="form-group mt-1">
                            <label class="btn btn-secondary" for="file-1"> <i class="icon s7-upload"></i><span>{{ 'SETTINGS.MY.LABEL.LOGO'|trans }}</span></label>
                            <input class="inputfile" type="file" name="file-1" id="file-1" data-multiple-caption="{count} files selected">
                            <ul class="parsley-errors-list filled" id="parsley-id-5"><li class="parsley-required">This value is required.</li></ul>
                        </div>

                        <div class="row pt-0 pt-0 pt-lg-5">
                            <div class="col-lg-6 pb-4 pb-lg-0">
                            </div>
                            <div class="col-lg-6">
                                <p class="text-right">
                                    <button class="btn btn-space btn-primary" type="submit">Submit</button>
                                    <button class="btn btn-space btn-secondary">Cancel</button>
                                </p>
                            </div>
                        </div>
                    </form>

{#                    {{ form(form) }}#}
                </div>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>
{% endblock %}