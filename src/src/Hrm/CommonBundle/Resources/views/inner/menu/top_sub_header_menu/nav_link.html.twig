{% if parent is defined %}
    <a class="nav-link" href="#" role="button" aria-expanded="false">
        <span class="icon s7-{{ item.icon }}"></span>
        <span>{{ item.name }}</span>
    </a>
{% elseif dropdown is defined %}
    <a class="nav-link" href="{{ item.link }}" data-toggle="dropdown">
        <span class="icon s7-{{ item.icon }}"></span>
        <span class="name">{{ item.name }}</span>
    </a>
{% else %}
    <a class="nav-link" href="{{ item.link }}">
        <span class="icon s7-{{ item.icon }}"></span>
        <span class="name">{{ item.name }}</span>
    </a>
{% endif %}