{% if item.link is defined and item.link == true  %}
    {% set link = path(item.link) %}
{% else %}
    {% set link = '#' %}
{% endif %}

{% if parent is defined %}
    <a class="nav-link" href="{{ link }}" role="button" aria-expanded="false">
        <span class="icon s7-{{ item.icon }}"></span>
        <span>{{ item.name }}</span>
    </a>
{% elseif dropdown is defined %}
    <a class="nav-link" href="{{ link }}" data-toggle="dropdown">
        <span class="icon s7-{{ item.icon }}"></span>
        <span class="name">{{ item.name }}</span>
    </a>
{% else %}
    <a class="nav-link" href="{{ link }}">
        <span class="icon s7-{{ item.icon }}"></span>
        <span class="name">{{ item.name }}</span>
    </a>
{% endif %}